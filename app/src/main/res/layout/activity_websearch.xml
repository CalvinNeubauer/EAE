<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="de.kl.fh.moviestar.Websearch">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/letter"
        android:id="@+id/titleET"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/letter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title"
        android:textColor="@color/letter"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/titleET"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/actor"
        android:textColor="@color/letter"
        android:id="@+id/textView4"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/titleET"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/letter"
        android:id="@+id/actorET"
        android:layout_below="@+id/textView4"
        android:backgroundTint="@color/letter"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/genre"
        android:textColor="@color/letter"
        android:id="@+id/textView5"
        android:layout_below="@+id/actorET"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="3dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/letter"
        android:id="@+id/genreET"
        android:layout_below="@+id/textView5"
        android:backgroundTint="@color/letter"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/year"
        android:textColor="@color/letter"
        android:id="@+id/textView6"
        android:layout_below="@+id/genreET"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="3dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yearET"
        android:textColor="@color/letter"
        android:layout_below="@+id/textView6"
        android:backgroundTint="@color/letter"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textColor="@color/letter"
        android:textSize="30sp"
        android:id="@+id/searchButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        />

</RelativeLayout>
