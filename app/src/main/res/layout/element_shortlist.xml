<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width ="match_parent"
    android:padding="10dp">


    <ImageView
        android:id="@+id/title_pic"
        android:layout_width ="100dp"
        android:layout_height="100dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/letter"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/title_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:layout_below="@id/title_name"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#000"
            android:progressTint="#0f0"
            android:secondaryProgressTint="#000"/>

        <TextView
            android:id="@+id/title_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title_rating"
            android:layout_below="@id/title_name"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/darkLetter"/>

        <TextView
            android:id="@+id/title_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title_name"
            android:textSize="18sp"
            android:textColor="@color/letter"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="0px"
            android:id="@+id/title_id"/>

    </RelativeLayout>
</LinearLayout>