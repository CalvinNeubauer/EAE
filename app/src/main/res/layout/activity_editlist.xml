<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="de.kl.fh.moviestar.UserList">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editNameButton"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:backgroundTint="@color/green"
        android:layout_alignParentRight="true"
        android:scaleX="0.65"
        android:scaleY="0.65"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/letter"
        android:id="@+id/list_name"
        android:layout_toLeftOf="@id/editNameButton"
        android:layout_alignBottom="@id/editNameButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:backgroundTint="@color/letter"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/edit_list_view"
        android:layout_alignParentStart="true"
        android:divider="@color/divider"
        android:layout_below="@id/editNameButton"
        android:dividerHeight="2dp"
        android:choiceMode="multipleChoice"
        android:listSelector="@color/colorAccent"/>

    <Button
        android:id="@+id/delete_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deleteList"
        android:textSize="30dp"
        android:textColor="@color/letter"
        android:background="@color/slate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
